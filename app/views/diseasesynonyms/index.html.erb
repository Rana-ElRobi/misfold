<p id="notice"><%= notice %></p>

<h1>Listing Diseasesynonyms</h1>

<table>
  <thead>
    <tr>
      <th>Synonym</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @diseasesynonyms.each do |diseasesynonym| %>
      <tr>
        <td><%= diseasesynonym.synonym %></td>
        <td><%= link_to 'Show', diseasesynonym %></td>
        <td><%= link_to 'Edit', edit_diseasesynonym_path(diseasesynonym) %></td>
        <td><%= link_to 'Destroy', diseasesynonym, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

