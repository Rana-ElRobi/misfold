<p id="notice"><%= notice %></p>

<h1>Listing Organs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organs.each do |organ| %>
      <tr>
        <td><%= organ.name %></td>
        <td><%= link_to 'Show', organ %></td>
        <td><%= link_to 'Edit', edit_organ_path(organ) %></td>
        <td><%= link_to 'Destroy', organ, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Organ', new_organ_path %>
